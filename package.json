{
  "name": "zalando-tech-radar",
  "version": "2024.1.0",
  "description": "Visualizing our technology choices",
  "homepage": "https://github.com/zalando/tech-radar#readme",
  "repository": "https://github.com/zalando/tech-radar.git",
  "license": "MIT",
  "private": true,
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "browser-sync": "^3.0.2",
    "d3": "^7.9.0",
    "eslint": "^8.52.0",
    "eslint-plugin-html": "^7.1.0",
    "playwright": "^1.56.1",
    "semver": "^7.6.3",
    "socket.io": "^4.7.2",
    "terser": "^5.44.1",
    "vitest": "^4.0.8"
  },
  "scripts": {
    "start": "browser-sync docs -w",
    "build": "bun run build.ts",
    "screenshot": "bun run screenshot.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:bun": "bun test test/radar.test.js",
    "test:junit": "vitest run test/vitest/radar.vitest.js --reporter=verbose --reporter=junit --outputFile=./test-results.xml",
    "lint": "npm run lint:js && npm run lint:html",
    "lint:js": "eslint docs/*.js",
    "lint:html": "eslint docs/*.html"
  }
}
