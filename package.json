{
  "name": "zalando-tech-radar",
  "version": "2024.1.0",
  "description": "Visualizing our technology choices",
  "homepage": "https://github.com/OleksandrKucherenko/tech-radar#readme",
  "repository": "https://github.com/OleksandrKucherenko/tech-radar.git",
  "license": "MIT",
  "type": "module",
  "private": true,
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^15.11.3",
    "@biomejs/biome": "^2.3.5",
    "@types/browser-sync": "^2.29.1",
    "@types/bun": "^1.3.2",
    "@types/d3": "^7.4.3",
    "@types/semver": "^7.7.1",
    "browser-sync": "^3.0.2",
    "chokidar": "^3.6.0",
    "d3": "^7.9.0",
    "eslint": "^8.52.0",
    "eslint-plugin-html": "^7.1.0",
    "htmllint-cli": "^0.0.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "semver": "^7.6.3",
    "socket.io": "^4.7.2",
    "terser": "^5.44.1"
  },
  "scripts": {
    "start": "bun run scripts/dev-server.ts",
    "build": "bun run scripts/build.ts",
    "screenshot": "bun run scripts/screenshot.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage --reporter=junit --reporter-outfile=./test-results.xml",
    "test:bun": "bun test",
    "test:junit": "bun test --reporter=junit --reporter-outfile=./test-results.xml",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "format": "biome format --write . && prettier --write '**/*.html'",
    "format:check": "biome format . && prettier --check '**/*.html'",
    "format:html": "prettier --write '**/*.html'",
    "rebuild-radar": "RELEASE_VERSION=0.0.1-dev bun run build --force 2>&1 | grep -E '(✓|✅|❌)' || true && git add docs/radar.js",
    "prepare": "husky"
  }
}
