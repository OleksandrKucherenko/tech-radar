{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/temp-build",
      "!**/docs/release",
      "!**/docs/radar.js",
      "!**/docs/screenshots",
      "!**/test-results.xml",
      "!**/coverage",
      "!**/.vitest",
      "!**/*.html"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": "warn",
        "noForEach": "off"
      },
      "style": {
        "useConst": "error",
        "useTemplate": "warn",
        "noNegationElse": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noDoubleEquals": "error"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      },
      "performance": {
        "noDelete": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "es5",
      "arrowParentheses": "asNeeded"
    },
    "globals": ["window", "document", "d3", "Bun"]
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2
    },
    "linter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "includes": ["**/src/**/*.js", "**/scripts/build.ts", "**/scripts/screenshot.ts"],
      "linter": {
        "rules": {
          "style": {},
          "suspicious": {
            "noVar": "error"
          }
        }
      }
    },
    {
      "includes": ["**/docs/**/*.js"],
      "linter": {
        "rules": {
          "style": {},
          "correctness": {
            "noUndeclaredVariables": "off"
          },
          "suspicious": {
            "noVar": "off"
          }
        }
      }
    },
    {
      "includes": ["**/test/**/*.js"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ]
}
